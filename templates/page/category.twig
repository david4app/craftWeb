						<section
							class="section mb-5">

							<!--  Card -->
							<div class="card card-body pb-0">
								<div class="single-post">

									<p class="font-weight-bold dark-grey-text text-center spacing grey lighten-4 py-2 mb-4">
										<strong>CATEGORIES</strong>
									</p>

									<ul class="list-group my-4">
										
										{% set categories = craft.categories().group('newsCategory').all() %} 
                                        
										{% for category in categories %}
										{% set count = craft.entries().section('news').relatedTo(category).count() %}

                                        <li class="list-group-item d-flex justify-content-between align-items-center">
											<a href = "{{category.url}}?categoryId={{category.id}}"
												<p class="mb-0">{{category.title}}</p>
											</a>
											<span class="badge teal badge-pill font-small">{{count}}</span>
										</li>

										{% endfor %}

						
									</ul>
								</div>

							</div>

						</section>
						<!-- Section: Categories --> 
