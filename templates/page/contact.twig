{% extends 'layout' %}
{% block main %}

	<section>

		<!-- Google map -->
		<div id="map-container" class="z-depth-1-half map-container" style="height: 500px">

			<iframe src="https://maps.google.com/maps?q=new%20york&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" style="border:0" allowfullscreen></iframe>

		</div>

	</section>


	<div
		class="container-fluid mb-5">

		<!-- Grid row -->
		<div
			class="row" style="margin-top: -140px;">

			<!-- Grid column -->
			<div class="col-md-12">

				<div class="card pb-5">

					<div class="card-body">

						<div
							class="container">

							<!-- Section: Contact v.3 -->
							<section
								class="contact-section my-5">

								<!-- Form with header -->
								<div
									class="card">

									<!-- Grid row -->
									<div
										class="row">

										<!-- Grid column -->
										<div class="col-lg-8">

											<div
												class="card-body form">

												<!-- Header -->
												<h3 class="mt-4">
													<i class="fas fa-envelope pr-2"></i>Write to us:</h3>

												<style>
													form {
														width: 100%;
													}
													button {
														border: 0;
													}
												</style>


												{% macro errorList(errors) %}
													{% if errors %}
														<ul class="errors">
															{% for error in errors %}
																<li>{{ error }}</li>
															{% endfor %}
														</ul>
													{% endif %}
												{% endmacro %}
												{% from _self import errorList %}

												{% set form = wheelform.form({
														id: 1,
													}) %}

												{{ form.open() }}
												{{ wheelformErrors['form'] is defined ? errorList(wheelformErrors['form']) }}
												<div class="row">
													<!-- Grid row -->
													{% for field in form.fields %}
														{% switch field.type %}
															{% case "textarea" %}
																<div class="col-md-12">
																	<div class="md-form mb-0">
																		<textarea type="text" id="form-contact-message" class="form-control md-textarea" rows="3" name="{{field.name}}"></textarea>
																		<label for="form-contact-message">{{field.label}}</label>
																		<button type="submit" class="btn-floating btn-lg blue">
																			<i class="far fa-paper-plane"></i>
																		</button>
																	</div>
																</div>
															{% case "email" %}
																<div class="col-md-6">
																	<div class="md-form mb-0">
																		<input type="text" name="{{field.name}}[]" id="form-contact-email" class="form-control">
																		<label for="form-contact-email" class="">{{field.label}}</label>
																	</div>
																</div>
															{% default %}
																<div class="col-md-6">
																	<div class="md-form mb-0">
																		<input type="{{field.type}}" name="{{field.name}}" id="form-contact-phone" class="form-control">
																		<label for="form-contact-phone" class="">{{field.label}}</label>
																	</div>
																</div>
														{% endswitch %}
													{% endfor %}

												</div>
												<!---row -->


											</form>

										</div>
										<!---card-body form -->

									</div>
									<!-- Grid column -->

									<!-- Grid column -->
									<div class="col-lg-4">

										<div class="card-body contact text-center h-100 white-text">
										{% include "segment/contactInfo.twig" with {'module' : entry.modules.one() } %}
										{% include "segment/iconsContactSocial.twig" %}
								</div>
								<!-- Grid row -->

							</div>
							<!-- Form with header -->

						</section>
						<!-- Section: Contact v.3 -->

					</div>

				</div>

			</div>

		</div>
		<!-- Grid column -->

	</div>
	<!-- Grid row -->

</div>
{% endblock %}
